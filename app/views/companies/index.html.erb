<div class="container py-5">
  <h3 class="mb-3 border-bottom pb-3">Companies</h3>
  <%= link_to '+ Create a Company', new_company_path, class: 'badge badge-success p-2' %>
  
  <% if @companies.empty? %>
    <p>No Companies Found</p>
  <% else %>
    <ul class="list-group list-unstyled my-3">
      <% @companies.each do |company| %>
        <li class="d-flex align-items-center border pr-3 mb-3">
          <%= link_to company_path(company), class: 'list-group-item list-group-item-action border-0' do %>
            <%= company.name %>
          <% end %>
          <div class="pl-3">
            <%= link_to 'Delete', company_path(company), method: :delete, data: { confirm: 'Are you sure you want to delete this company?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
